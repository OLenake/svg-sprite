{
  "name": "svg-sprite",
  "version": "1.6.0-alpha.0",
  "author": "Joschi Kuphal <joschi@kuphal.net> (https://jkphl.is)",
  "description": "SVG sprites & stacks galore â€” A low-level Node.js module that takes a bunch of SVG files, optimizes them and bakes them into SVG sprites of several types along with suitable stylesheet resources (e.g. CSS, Sass, LESS, Stylus, etc.)",
  "homepage": "https://github.com/jkphl/svg-sprite",
  "repository": {
    "type": "git",
    "url": "https://github.com/jkphl/svg-sprite.git"
  },
  "bugs": {
    "url": "https://github.com/jkphl/svg-sprite/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "main": "lib/svg-sprite.js",
  "bin": {
    "svg-sprite": "./bin/svg-sprite.js"
  },
  "directories": {
    "test": "test"
  },
  "files": [
    "bin",
    "docs",
    "lib",
    "tmpl",
    "CHANGELOG.md"
  ],
  "scripts": {
    "lint": "xo",
    "mocha": "_mocha --reporter spec --timeout 20000 test/svg-sprite.js",
    "coverage": "c8 npm run mocha",
    "test": "npm run mocha"
  },
  "dependencies": {
    "async": "^3.2.0",
    "css-selector-parser": "^1.4.1",
    "cssmin": "^0.4.3",
    "cssom": "^0.4.4",
    "glob": "^7.1.6",
    "js-yaml": "^3.14.1",
    "lodash": "^4.17.21",
    "mkdirp": "^0.5.5",
    "mustache": "^4.1.0",
    "phantomjs-prebuilt": "^2.1.16",
    "prettysize": "^2.0.0",
    "svgo": "^1.3.2",
    "vinyl": "^2.2.1",
    "winston": "^3.3.3",
    "xmldom": "^0.2.1",
    "xpath": "^0.0.32",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "c8": "^7.6.0",
    "image-diff": "^2.0.0",
    "less": "^3.13.1",
    "mocha": "^8.3.0",
    "node-sass": "^5.0.0",
    "rimraf": "^3.0.2",
    "should": "^13.2.3",
    "stylus": "^0.54.8",
    "svg2png": "^4.1.1",
    "xo": "^0.38.1"
  },
  "keywords": [
    "icon",
    "icons",
    "svg",
    "png",
    "sprite",
    "spritesheet",
    "stack",
    "generator",
    "css",
    "sass",
    "less",
    "stylus",
    "stylesheet",
    "inline",
    "html",
    "vector",
    "rwd",
    "retina",
    "mustache",
    "gulpfriendly"
  ],
  "c8": {
    "include": [
      "lib/**/*.js"
    ],
    "reporter": [
      "html",
      "lcov",
      "text-summary"
    ]
  },
  "xo": {
    "esnext": true,
    "space": 4,
    "rules": {
      "capitalized-comments": "off",
      "eslint-comments/disable-enable-pair": "off",
      "guard-for-in": "off",
      "max-depth": [
        "error",
        5
      ],
      "max-nested-callbacks": "off",
      "max-params": "off",
      "no-labels": "off",
      "no-mixed-operators": "off",
      "no-multi-assign": "off",
      "no-negated-condition": "off",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "prefer-exponentiation-operator": "off",
      "promise/prefer-await-to-then": "off",
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "spaced-comment": "off",
      "unicorn/better-regex": "off",
      "unicorn/explicit-length-check": "off",
      "unicorn/no-array-for-each": "off",
      "unicorn/no-for-loop": "off",
      "unicorn/no-nested-ternary": "off",
      "unicorn/prefer-includes": "off",
      "unicorn/prefer-number-properties": "off",
      "unicorn/prefer-query-selector": "off",
      "unicorn/prefer-reflect-apply": "off",
      "unicorn/prefer-regexp-test": "off",
      "unicorn/prefer-string-slice": "off",
      "unicorn/prevent-abbreviations": "off"
    },
    "overrides": [
      {
        "files": "test/**/*.js",
        "envs": [
          "mocha"
        ]
      }
    ]
  }
}
